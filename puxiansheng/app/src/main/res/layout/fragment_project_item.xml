<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.puxiansheng.www.common.SwipeMenuLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="6dp"
            app:cardCornerRadius="6dp">

            <RelativeLayout
                android:id="@+id/item_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_dialog">

                <ImageView
                    android:id="@+id/shop_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/shop_icon"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/industry_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/title"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/title"
                    android:background="@drawable/bg_lable_orange"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/white"
                    android:textSize="8.5sp" />

                <TextView
                    android:id="@+id/sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_alignLeft="@+id/title"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/shop_icon"
                    android:textColor="#666666"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sub_title"
                    android:layout_alignLeft="@+id/title"
                    android:layout_alignBottom="@+id/icon"
                    android:layout_gravity="start"
                    android:layout_marginTop="17dp"
                    android:text="支持加盟"
                    android:textColor="#FF6D10"
                    android:textSize="8sp" />


                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lable"
                    android:layout_alignLeft="@+id/title"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@mipmap/icon_time"
                    android:drawablePadding="5dp"
                    android:textColor="#666666"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date"
                    android:layout_alignLeft="@+id/title"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@mipmap/ic_location"
                    android:drawablePadding="5dp"
                    android:textColor="#666666"
                    android:textSize="10sp" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#88ff0000"
            android:gravity="center"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </com.puxiansheng.www.common.SwipeMenuLayout>
</layout>