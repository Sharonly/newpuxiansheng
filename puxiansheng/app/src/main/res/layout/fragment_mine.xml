<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="189dp"
                android:background="@mipmap/bg_mine">

                <com.puxiansheng.www.common.StateBarView
                    android:id="@+id/statusbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tanslate"
                    android:theme="@style/Material"/>

                <ImageView
                    android:id="@+id/icon_setting"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="2dp"
                    android:layout_marginTop="38dp"
                    android:layout_below="@+id/statusbar"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:src="@mipmap/ic_set" />

                <ImageView
                    android:id="@+id/icon_scan"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="38dp"
                    android:src="@mipmap/ic_scan"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_marginTop="38dp"
                    android:layout_below="@+id/statusbar"
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:layout_marginLeft="18.5dp"
                    android:id="@+id/user_icon"
                    android:src="@mipmap/ic_default_icon"/>


                <TextView
                    android:id="@+id/user_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_scan"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@+id/user_icon"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_account"
                    android:layout_alignLeft="@+id/user_account"
                    android:layout_marginTop="7dp"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp">

                <TextView
                    android:id="@+id/bt_my_release"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_my_release"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="我的发布"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/bt_my_farvior"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ic_my_farvior"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="我的收藏"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/bt_my_history"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ic_my_history"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="历史记录"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/bt_my_kefu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ic_my_kefu"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="我的客服"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <ImageView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:scaleType="fitXY"
                android:src="@mipmap/banner_invest_business"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/bt_request"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="6dp"
                android:drawableStart="@mipmap/ic_question"
                android:drawableEnd="@mipmap/ic_arrow"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="问题与反馈"
                android:textColor="@color/input_text_blank"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="16dp"
                android:src="@color/gray_line" />

            <TextView
                android:id="@+id/privacy"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableStart="@mipmap/ic_lock"
                android:drawableEnd="@mipmap/ic_arrow"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="隐私政策"
                android:textColor="@color/input_text_blank"
                android:textSize="13sp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="16dp"
                android:src="@color/gray_line"
               />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">



            <TextView
                android:id="@+id/call_phone"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableStart="@mipmap/icon_phone"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="咨询热线"
                android:textColor="@color/input_text_blank"
                android:textSize="13sp"

                />

            <TextView
                android:id="@+id/phone_num"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableEnd="@mipmap/ic_arrow"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_gray"
                android:textSize="13sp"
               android:text="4008068999" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="16dp"
                android:src="@color/gray_line" />

            <TextView
                android:id="@+id/message_manager"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:drawableStart="@mipmap/ic_knock"
                android:drawableEnd="@mipmap/ic_arrow"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="通知管理"
                android:textColor="@color/input_text_blank"
                android:textSize="13sp"
                android:layout_marginBottom="30dp"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:layout_marginTop="135dp"
            android:elevation="6dp"
            android:background="@mipmap/bg_mine_release_card"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_public"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="27dp">

                <TextView
                    android:id="@+id/public_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="0"
                    android:textColor="@color/input_text_blank"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="已发布"
                    android:textColor="@color/appMainAccent"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_sold_out"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="27dp">

                <TextView
                    android:id="@+id/finish_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="0"
                    android:textColor="@color/input_text_blank"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="已下架"
                    android:textColor="@color/appMainAccent"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_processing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="27dp">

                <TextView
                    android:id="@+id/processing_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5.1dp"
                    android:text="0"
                    android:textColor="@color/input_text_blank"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="处理中"
                    android:textColor="@color/appMainAccent"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</layout>