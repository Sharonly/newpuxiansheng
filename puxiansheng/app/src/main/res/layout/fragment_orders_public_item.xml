<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_dialog">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="19.5dp"
                android:maxWidth="235dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/is_vip"
                android:layout_width="27dp"
                android:layout_height="15dp"
                android:src="@mipmap/ic_vip"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/title"
                android:layout_alignTop="@+id/title"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/is_vip"
                android:layout_alignTop="@+id/title"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/txt_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_alignLeft="@+id/title"
                android:layout_marginTop="15.5dp"
                android:text="面积"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_alignTop="@+id/txt_size"
                android:layout_toRightOf="@+id/txt_size"
                android:textColor="@color/input_text_blank"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_size"
                android:layout_marginTop="14.5dp"
                android:layout_gravity="start"
                android:layout_alignLeft="@+id/txt_size"
                android:text="租金"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txt_rent"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txt_rent"
                android:textColor="@color/tab_orange"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/txt_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_rent"
                android:layout_alignLeft="@+id/title"
                android:layout_marginTop="14.5dp"
                android:text="地址"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txt_area"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/txt_area"
                android:textColor="@color/input_text_blank"
                android:textSize="12sp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_area"
                android:layout_alignLeft="@+id/title"
                android:layout_marginBottom="14.5dp"
                android:textSize="12sp" />


            <View
                android:id="@+id/line_2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/desc"
                android:layout_alignLeft="@+id/title"
                android:layout_marginRight="16dp"
                android:background="@color/line_gray" />


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_2"
                android:layout_marginLeft="14.5dp"
                android:layout_marginTop="15.5dp"
                android:drawableStart="@mipmap/icon_time"
                android:drawablePadding="4dp"
                android:textColor="@color/appMainAccent"
                android:textSize="12sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/bt_delete"
                android:layout_width="16.5dp"
                android:layout_height="15.5dp"
                android:layout_below="@+id/line_2"
                android:layout_marginLeft="15.5dp"
                android:layout_marginTop="14.5dp"
                android:src="@mipmap/ic_release_delete" />

            <TextView
                android:id="@+id/bt_refresh"
                android:layout_width="60dp"
                android:layout_height="27dp"
                android:layout_below="@+id/line_2"
                android:layout_alignParentRight="true"
                android:layout_marginTop="7dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/bg_bt_delete"
                android:gravity="center"
                android:text="刷新"
                android:textColor="@color/tab_orange"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bt_edit"
                android:layout_width="60dp"
                android:layout_height="27dp"
                android:layout_below="@+id/line_2"
                android:layout_marginTop="7dp"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@+id/bt_refresh"
                android:background="@drawable/bg_bt_delete"
                android:gravity="center"
                android:text="修改"
                android:textColor="@color/tab_orange"
                android:textSize="14sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/ic_type"
            android:layout_width="39dp"
            android:layout_height="21dp"
            android:layout_gravity="top|right"
            android:layout_marginTop="55dp"
            android:layout_marginRight="11.5dp"
            />

    </FrameLayout>

</layout>