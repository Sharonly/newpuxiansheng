<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="315dp"
        android:layout_height="160dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/layout_no_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:visibility="gone">

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E5E5E5" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="13dp"
                android:src="@mipmap/ic_card_no_login" />


            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:text="诶呀，您还未登录!"
                android:textColor="#7F7F7F"
                android:textSize="15sp" />


            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/img"
                android:layout_marginTop="14dp"
                android:background="#E5E5E5" />


            <TextView
                android:id="@+id/bt_login"
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:layout_below="@+id/line3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:background="@drawable/bg_bt_card_orange"
                android:gravity="center"
                android:text="立即登录"
                android:textColor="#F78934"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_no_release"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:visibility="gone">

            <View
                android:id="@+id/line11"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E5E5E5" />


            <TextView
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line11"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42.5dp"
                android:text="诶呀，您还未发布任何信息!"
                android:textColor="#7F7F7F"
                android:textSize="15sp" />


            <View
                android:id="@+id/line13"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/sub"
                android:layout_marginTop="45dp"
                android:background="#E5E5E5" />


            <TextView
                android:id="@+id/bt_release"
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:layout_below="@+id/line13"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:background="@drawable/bg_bt_card_orange"
                android:gravity="center"
                android:text="去发布"
                android:textColor="#F78934"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/release_list"
            android:layout_width="310dp"
            android:layout_height="149dp"
            android:layout_marginLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="gone"/>

    </LinearLayout>
</layout>