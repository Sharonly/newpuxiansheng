<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="315dp"
        android:layout_height="183dp">

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#E5E5E5" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="72.5dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="17dp"
            android:src="@mipmap/ic_card_fast_out" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:text="累计转店"
            android:textColor="#191919"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shop_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/title"
            android:textColor="#F78934"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/title"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@+id/shop_num"
            android:text="家"
            android:textColor="#B1B1B1"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignLeft="@+id/title"
            android:layout_marginTop="12dp"
            android:text="留下您的电话 快速转店 快至"
            android:textColor="#7F7F7F"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/desc_three"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_below="@+id/title"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@+id/desc"
            android:src="@mipmap/img_three"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/desc_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/desc_three"
            android:text="天"
            android:textColor="#7F7F7F"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/phone_num"
            android:layout_width="204dp"
            android:layout_height="32dp"
            android:layout_below="@+id/desc"
            android:layout_alignLeft="@+id/title"
            android:layout_marginTop="11dp"
            android:background="@drawable/bg_input_phonenum"
            android:gravity="center"
            android:hint="请输入电话号码"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:textColor="#191919"
            android:textSize="15sp"
            android:textStyle="bold" />


        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/phone_num"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="#E2CBB5" />


        <TextView
            android:id="@+id/bt_out"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/line3"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_bt_release_orange"
            android:gravity="center"
            android:text="立即转店"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:backgroundTint="@color/appMain"
            app:cornerRadius="15dp" />

    </RelativeLayout>

</layout>