<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="315dp"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp">
        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E5E5E5"/>

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@mipmap/ic_card_fast_out"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计转店"
            android:textStyle="bold"
            android:textColor="#191919"
            android:textSize="18sp"
            android:layout_marginTop="13dp"/>

        <TextView
            android:id="@+id/shop_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#F78934"
            android:textSize="24sp"
            android:layout_marginTop="11.5dp"
            android:layout_toRightOf="@+id/title"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B1B1B1"
            android:text="家"
            android:textSize="13sp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/shop_num"/>


        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留下您的电话 快速转店 快至3天"
            android:textColor="#7F7F7F"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/title"/>


        <EditText
            android:id="@+id/phone_num"
            android:layout_width="90dp"
            android:layout_height="13dp"
            android:hint="请输入电话号码"
            android:textColor="#191919"
            android:textSize="11sp"
            android:layout_marginTop="11dp"
            android:maxLines="1"
            android:inputType="phone"
            android:layout_below="@+id/desc"
            android:maxLength="11"
            android:background="@null"/>

        <View
            android:id="@+id/line2"
            android:layout_width="90dp"
            android:layout_height="0.5dp"
            android:background="#E5E5E5"
            android:layout_below="@+id/phone_num"
            android:layout_marginTop="3dp"/>

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E5E5E5"
            android:layout_below="@+id/line2"
            android:layout_marginTop="15dp"/>


        <TextView
            android:id="@+id/bt_out"
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:textSize="@dimen/sp_14"
            android:textColor="#F78934"
            android:text="立即转店"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/line3"
            android:layout_marginTop="9dp"
            android:background="@drawable/bg_bt_card_orange"/>

    </RelativeLayout>

</layout>