<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/bg_dialog">

            <ImageView
                android:id="@+id/shop_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="18dp"
                android:background="@mipmap/bg_banner_orage"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="18dp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/shop_icon"/>

        <TextView
            android:id="@+id/invest_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
           android:layout_alignLeft="@+id/title"
            android:layout_below="@+id/title"
            android:layout_marginTop="9dp"
            />

        <TextView
            android:id="@+id/invest_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/text_gray"
            android:layout_alignLeft="@+id/title"
            android:textSize="11sp"
            android:layout_below="@+id/invest_content"
            android:layout_marginTop="16dp"
            />

        <TextView
            android:id="@+id/jine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#cccccc"
            android:layout_alignLeft="@+id/title"
            android:text="投资金额"
            android:textSize="11sp"
            android:layout_below="@+id/invest_label"
            android:layout_marginTop="27dp"
            />

        <TextView
            android:id="@+id/invest_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tab_orange"
            android:text="投资金额"
            android:layout_below="@+id/invest_label"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/jine"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/bt_consult"
            android:layout_width="78dp"
            android:layout_height="26dp"
            android:background="@drawable/bg_bt_zixun_slected"
            android:text="立即咨询"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center" />


    </RelativeLayout>
</layout>