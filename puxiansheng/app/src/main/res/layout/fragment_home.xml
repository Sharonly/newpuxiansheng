<!--                    </FrameLayout>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/simple_transfer_out"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/icon_zhuandain"
                            android:drawablePadding="8dp"
                            android:gravity="center"
                            android:text="转店"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/simple_transfer_in"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/icon_zhaodian"
                            android:drawablePadding="8dp"
                            android:gravity="center"
                            android:text="找店"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/investment_business"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/icon_zhaoshang"
                            android:drawablePadding="8dp"
                            android:gravity="center"
                            android:text="招商加盟"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/fast_transfer_out"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/icon_kuaisuzhuandian"
                            android:drawablePadding="8dp"
                            android:gravity="center"
                            android:text="快速转店"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/fast_transfer_in"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/icon_kuaisuzaodian"
                            android:drawablePadding="8dp"
                            android:gravity="center"
                            android:text="快速找店"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="17dp">

                        <ImageView
                            android:id="@+id/img_one"
                            android:layout_width="106.5dp"
                            android:layout_height="55dp"
                            android:scaleType="matrix"
                            android:adjustViewBounds="true"/>

                        <ImageView
                            android:id="@+id/img_two"
                            android:layout_width="145dp"
                            android:layout_height="55dp"
                            android:layout_alignTop="@+id/img_one"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/img_one"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true" />

                        <ImageView
                            android:id="@+id/img_three"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/img_one"
                            android:layout_alignRight="@+id/img_two"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="5dp"
                            android:scaleType="matrix"
                            android:adjustViewBounds="true"/>

                        <ImageView
                            android:id="@+id/img_four"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignTop="@+id/img_one"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/img_two"
                            android:scaleType="matrix"
                            android:adjustViewBounds="true"/>


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="53.5dp"
                        android:layout_marginLeft="9.5dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="9.5dp"
                        android:background="@mipmap/card"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="46dp"
                            android:layout_height="14.5dp"
                            android:layout_marginLeft="17dp"
                            android:src="@mipmap/words" />

                        <TextView
                            android:id="@+id/pxs_headline"
                            android:layout_width="match_parent"
                            android:layout_height="53.5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:drawableRight="@mipmap/icon_arrow"
                            android:drawablePadding="15dp"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:marqueeRepeatLimit="1"
                            android:singleLine="true"
                            android:textColor="#252525"
                            android:textSize="11.9sp" />

<!--                        <com.puxiansheng.www.common.ScrollTextView-->
<!--                            android:id="@+id/pxs_headline"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="53.5dp"-->
<!--                            android:layout_gravity="center_vertical"-->
<!--                            android:layout_marginLeft="12dp"-->
<!--                            android:layout_marginRight="12dp"-->
<!--                            android:drawableRight="@mipmap/icon_arrow"-->
<!--                            android:drawablePadding="14dp"-->
