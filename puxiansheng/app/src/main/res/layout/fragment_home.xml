                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.puxiansheng.www.common.TopBannerView
                        android:id="@+id/top_banner_view"
                        android:layout_width="match_parent"
                        android:layout_height="225dp"/>

