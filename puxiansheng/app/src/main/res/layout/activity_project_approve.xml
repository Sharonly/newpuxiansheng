<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8F8"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.puxiansheng.www.common.StateBarView
                android:id="@+id/appStatusBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    android:padding="18dp"
                    android:src="@drawable/ic_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="14dp"
                    android:text="创业者认证"
                    android:textColor="@color/input_text_blank"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/bg_dialog">

            <TextView
                android:id="@+id/txt_project"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="心动项目"
                android:textColor="@color/input_text_blank"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edit_project"
                android:layout_width="200dp"
                android:layout_height="53dp"
                android:layout_alignTop="@+id/txt_project"
                android:layout_marginLeft="103dp"
                android:drawablePadding="6dp"
                android:textColor="@color/text_gray"
                android:gravity="center_vertical"
                android:textSize="16sp" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/txt_project"
                android:background="#666666"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"/>

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_below="@+id/line2"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="称呼"
                android:textColor="@color/input_text_blank"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="200dp"
                android:layout_height="54dp"
                android:layout_alignTop="@+id/txt_name"
                android:inputType="number"
                android:layout_marginLeft="103dp"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:background="@null"
                android:textColor="#666666"
                android:textSize="16sp"
                android:hint="请输入"/>

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/edit_name"
                android:background="#666666"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"/>


            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_below="@+id/line3"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="联系方式"
                android:textColor="@color/input_text_blank"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="200dp"
                android:layout_height="54dp"
                android:layout_alignTop="@+id/txt_phone"
                android:layout_marginLeft="103dp"
                android:drawablePadding="6dp"
                android:textColor="@color/text_gray"
                android:gravity="center_vertical"
                android:background="@null"
                android:textSize="16sp"
                android:hint="请输入"/>


            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/edit_phone"
                android:background="#666666"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"/>

            <TextView
                android:id="@+id/txt_invest"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_below="@+id/line4"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="预计投资"
                android:textColor="@color/input_text_blank"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_invest"
                android:layout_width="200dp"
                android:layout_height="54dp"
                android:layout_alignTop="@+id/txt_invest"
                android:layout_marginLeft="103dp"
                android:drawablePadding="6dp"
                android:textColor="@color/text_gray"
                android:gravity="center_vertical"
                android:background="@null"
                android:textSize="16sp"
                android:hint="万元"/>


        </RelativeLayout>

        <TextView
            android:id="@+id/submit"
            style="@style/loginBtStyle"
            android:layout_marginTop="230dp"
            android:background="@drawable/bg_bt_login_slected"
            android:clickable="true"
            android:text="提交"
            android:textColor="@color/white" />

    </LinearLayout>

</layout>