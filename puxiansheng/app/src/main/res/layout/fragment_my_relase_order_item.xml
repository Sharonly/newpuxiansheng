<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_dialog">

            <TextView
                android:id="@+id/order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="19.5dp"
                android:text=" 节点方便大家好家庭和"
                android:textColor="@color/input_text_blank"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ic_label"
                android:layout_width="27dp"
                android:layout_height="14dp"
                android:layout_alignTop="@+id/order_title"
                android:layout_toRightOf="@+id/order_title"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/ic_vip" />

            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_title"
                android:layout_alignLeft="@+id/order_title"
                android:layout_marginTop="19.5dp"
                android:layout_marginRight="16dp"
                android:textColor="#989796"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/size"
                android:layout_alignLeft="@+id/order_title"
                android:layout_marginTop="14.5dp"
                android:layout_marginRight="16dp"
                android:textColor="#989796"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rent"
                android:layout_alignLeft="@+id/order_title"
                android:layout_marginTop="14.5dp"
                android:layout_marginRight="16dp"
                android:textColor="#989796"
                android:textSize="13sp" />

            <View
                android:id="@+id/line_white"
                android:layout_width="match_parent"
                android:layout_height="20.5dp"
                android:background="@color/tanslate"
                android:layout_below="@+id/address"
                android:visibility="gone" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/address"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="16sp"
                android:background="@color/line_gray" />

            <ImageView
                android:id="@+id/bt_delete"
                android:layout_width="16.5dp"
                android:layout_height="15.5dp"
                android:layout_below="@+id/line"
                android:layout_marginLeft="15.5dp"
                android:layout_marginTop="14.5dp"
                android:src="@mipmap/ic_release_delete" />

            <TextView
                android:id="@+id/bt_refresh"
                android:layout_width="50dp"
                android:layout_height="26dp"
                android:layout_below="@+id/line"
                android:layout_marginLeft="185dp"
                android:layout_marginTop="8.5dp"
                android:layout_marginBottom="9.5dp"
                android:layout_toRightOf="@+id/bt_delete"
                android:background="@drawable/bg_release_order_bt_edit"
                android:gravity="center"
                android:text="刷新"
                android:textColor="#F78934"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/bt_edit"
                android:layout_width="50dp"
                android:layout_height="26dp"
                android:layout_below="@+id/line"
                android:layout_marginLeft="9.5dp"
                android:layout_marginTop="8.5dp"
                android:layout_toRightOf="@+id/bt_refresh"
                android:background="@drawable/bg_release_order_bt_edit"
                android:gravity="center"
                android:text="修改"
                android:textColor="#F78934"
                android:textSize="12sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/transfer_type"
            android:layout_width="39dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="9.5dp"
            android:layout_marginTop="76dp"
            android:src="@mipmap/ic_transfer_in"/>
    </FrameLayout>

</layout>