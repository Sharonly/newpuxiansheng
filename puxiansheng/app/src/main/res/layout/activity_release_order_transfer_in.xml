<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical"
            android:theme="@style/Material">

            <com.puxiansheng.www.common.StateBarView
                android:id="@+id/appStatusBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"/>

        <RelativeLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@mipmap/ic_back_black" />

                <TextView
                    android:id="@+id/topTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="找店发布"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:id="@+id/layout_info"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@color/line_gray"/>


            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_dialog">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="标题"
                    android:drawableStart="@mipmap/ic_xinhao"
                    android:drawablePadding="3dp"
                    android:textColor="@color/input_text_blank"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_height="53dp"/>

                <EditText
                    android:id="@+id/input_title"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@+id/title"
                    android:background="@null"
                    android:hint="请输入标题"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/input_title"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@color/line_gray" />



                <TextView
                    android:id="@+id/txt_industry"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/line1"
                    android:layout_marginLeft="14dp"
                    android:drawableStart="@mipmap/ic_xinhao"
                    android:drawablePadding="3dp"
                    android:text="行业"
                    android:textColor="@color/input_text_blank"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_height="53dp" />

                <TextView
                    android:id="@+id/button_select_industry"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/txt_industry"
                    android:singleLine="true"
                    android:layout_marginLeft="50dp"
                    android:layout_alignTop="@+id/txt_industry"
                    android:layout_marginRight="10dp"
                    android:drawableEnd="@mipmap/ic_arrow"
                    android:drawablePadding="12dp"
                    android:text="请选择行业"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/button_select_industry"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@color/line_gray" />


                <TextView
                    android:id="@+id/txt_size"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/line2"
                    android:layout_marginLeft="14dp"
                    android:drawableStart="@mipmap/ic_xinhao"
                    android:drawablePadding="3dp"
                    android:text="面积"
                    android:textColor="@color/input_text_blank"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_height="53dp"/>

                <TextView
                    android:id="@+id/button_select_size"
                    android:layout_alignTop="@+id/txt_size"
                    android:layout_marginRight="10dp"
                    android:drawableEnd="@mipmap/ic_arrow"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/txt_size"
                    android:singleLine="true"
                    android:layout_marginLeft="50dp"
                    android:drawablePadding="12dp"
                    android:text="请选择面积"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/button_select_size"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@color/line_gray" />

                <TextView
                    android:id="@+id/txt_rent"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/line3"
                    android:layout_marginLeft="14dp"
                    android:drawableStart="@mipmap/ic_xinhao"
                    android:drawablePadding="3dp"
                    android:text="租金"
                    android:textColor="@color/input_text_blank"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_height="53dp" />

                <TextView
                    android:id="@+id/button_select_rent"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_alignTop="@+id/txt_rent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:drawableEnd="@mipmap/ic_arrow"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/txt_rent"
                    android:singleLine="true"
                    android:layout_marginLeft="50dp"
                    android:drawablePadding="12dp"
                    android:text="请选择租金"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/button_select_rent"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@color/line_gray" />

                <TextView
                    android:id="@+id/txt_area"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/line4"
                    android:layout_marginLeft="14dp"
                    android:drawableStart="@mipmap/ic_xinhao"
                    android:drawablePadding="3dp"
                    android:text="区域"
                    android:textColor="@color/input_text_blank"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_height="53dp"/>

                <TextView
                    android:id="@+id/button_select_area"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_alignTop="@+id/txt_area"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/txt_area"
                    android:layout_marginRight="10dp"
                    android:drawableEnd="@mipmap/ic_arrow"
                    android:layout_marginLeft="50dp"
                    android:drawablePadding="12dp"
                    android:text="请选择区域，可支持多选"
                    android:textColor="@color/text_gray"
                    android:gravity="center_vertical"
                    android:textSize="15sp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/area_list"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/txt_area"
                    android:layout_alignLeft="@+id/txt_area"
                    />

                <ImageView
                    android:id="@+id/line5"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/txt_area"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@color/line_gray" />

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/area_list"
                    android:layout_alignLeft="@+id/line5"
                    android:drawableStart="@mipmap/ic_xinhao"
                    android:drawablePadding="3dp"
                    android:text="联系人"
                    android:textColor="@color/input_text_blank"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_height="53dp" />

                <EditText
                    android:id="@+id/input_name"
                    android:layout_alignTop="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@+id/txt_name"
                    android:background="@null"
                    android:hint="请输入联系人"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp"
                    />

                <ImageView
                    android:id="@+id/line15"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/txt_name"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@color/line_gray" />

                <TextView
                    android:id="@+id/txt_phone"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/line15"
                    android:layout_alignLeft="@+id/txt_area"
                    android:drawableStart="@mipmap/ic_xinhao"
                    android:drawablePadding="3dp"
                    android:text="联系方式"
                    android:textColor="@color/input_text_blank"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_height="53dp" />

                <EditText
                    android:id="@+id/input_phone"
                    android:layout_alignTop="@+id/txt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:layout_marginLeft="26dp"
                    android:layout_toRightOf="@+id/txt_phone"
                    android:background="@null"
                    android:hint="请输入联系方式"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/line16"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/txt_phone"
                    android:background="@color/line_gray" />

                <TextView
                    android:id="@+id/layout_facilities"
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_height="53dp"
                    android:layout_below="@+id/line16"
                    android:layout_alignLeft="@+id/line16"
                    android:layout_marginLeft="16dp"
                    android:text="配套设施"
                    android:textColor="@color/input_text_blank" />

                <TextView
                    android:id="@+id/bt_select_facilities"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_alignTop="@+id/layout_facilities"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:drawableEnd="@mipmap/ic_arrow"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/layout_facilities"
                    android:singleLine="true"
                    android:layout_marginLeft="50dp"
                    android:drawablePadding="12dp"
                    android:textColor="@color/text_gray"
                    android:textSize="15sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_facilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_facilities"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    />

                <ImageView
                    android:id="@+id/line26"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/list_facilities"
                    android:background="@color/line_gray" />

                <TextView
                    android:id="@+id/txt_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_below="@+id/line26"
                    android:layout_marginLeft="14dp"
                    android:text="楼层"
                    android:textColor="@color/input_text_blank"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>




                <EditText
                    android:id="@+id/input_floor"
                    android:textColor="@color/text_gray"
                    android:layout_alignTop="@+id/txt_floor"
                    android:layout_width="50dp"
                    android:layout_height="53dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@+id/txt_floor"
                    android:background="@null"
                    android:textSize="15sp"/>


                <TextView
                    android:id="@+id/floor_unit"
                    android:text="楼"
                    android:textColor="@color/text_gray"
                    android:layout_alignTop="@+id/txt_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/input_floor"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/line6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/txt_floor"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@color/line_gray" />

                <TextView
                    android:id="@+id/txt_description"
                    android:layout_below="@+id/line6"
                    android:layout_alignLeft="@+id/layout_content"
                    android:text="详情描述"
                    android:textColor="@color/input_text_blank"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="23dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/input_description"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:minHeight="62dp"
                    android:background="@drawable/bg_input_release"
                    android:hint="请输入详细情况，更利于客户详细了解细节"
                    android:textSize="14sp"
                    android:gravity="start"
                    android:padding="5dp"
                    android:layout_below="@+id/txt_description"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/submit"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="50dp"
                    android:layout_margin="20dp"
                    android:layout_below="@+id/input_description"
                    android:gravity="center"
                    android:text="提交"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/appMain"
                    app:cornerRadius="3dp" />

            </RelativeLayout>
            </ScrollView>
        </LinearLayout>

</layout>